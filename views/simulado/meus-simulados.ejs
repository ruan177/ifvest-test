
<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!--========== BOX ICONS ==========-->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">

        <!--========== CSS ==========-->
        <link rel="stylesheet" href="/css/styles.css">
        <head>
          <!-- Outros elementos do head -->
          <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
      </head>

        <title>Responsive sidebar submenus</title>
    </head>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        main {
            margin: 20px;
        }
        h1 {
            color: #333;
            margin-bottom: 20px;
            font-size: 24px; /* Aumenta o tamanho do título */
            font-weight: bold; /* Torna o título em negrito */
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }
        th {
            background-color: #f2f2f2;
        }
        .edit-icon, .delete-icon, .add-questions-icon {
            color: #333;
            text-decoration: none;
            margin-left: 10px;
            margin-right: 10px; /* Adiciona espaço à direita dos ícones */
        }
        .edit-icon {
            color: #007bff; /* Azul */
        }
        .delete-icon {
            color: #dc3545; /* Vermelho */
        }
        .add-questions-icon {
            color: #333;/* Verde */
        }
        .edit-icon:hover, .delete-icon:hover, .add-questions-icon:hover {
            opacity: 0.7; /* Adiciona um efeito de opacidade ao passar o mouse */
        }
        .edit-icon i, .delete-icon i, .add-questions-icon i {
            margin-right: 5px;
        }
    </style>
    <body>
        <%- include('../partials/sidebar') %>
        <main>
          <h1>Meus Simulados</h1>

          <table>
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Descricao</th>
                    <th>Tipo</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% simulados.forEach(simulado => { %>
                    <tr>
                        <td><%= simulado.titulo %></td>
                        <td><%= simulado.descricao %></td>
                        <td><%= simulado.tipo %></td>
                        <td>
                            <a href="/usuario/simulados/<%= simulado.id %>/fazer" class="simulado-icon">
                                <i class="fas fa-play"></i> Fazer Simulado
                            </a>
                            <a href="/usuario/simulados/<%= simulado.id %>/editar" class="edit-icon">
                                <i class="fas fa-edit"></i> editar
                            </a>

                            <a href="/usuario/simulados/<%= simulado.id %>/adicionar-questoes" class="add-questions-icon">
                                <i class="fas fa-plus"></i> Adicionar Questões
                            </a>
                        
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
      

<% if (totalPages > 1) { %>
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">
        <% if (currentPage > 1) { %>
          <li class="page-item"><a class="page-link" href="?page=<%= currentPage - 1 %>">Anterior</a></li>
        <% } %>
        <% for(let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= currentPage == i? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>
        <% if (currentPage < totalPages) { %>
          <li class="page-item"><a class="page-link" href="?page=<%= currentPage + 1 %>">Próximo</a></li>
        <% } %>
      </ul>
    </nav>
  <% } %>
</main>
        <!--========== MAIN JS ==========-->
        <script src="/js/main.js"></script>
    </body>
</html>